{% extends 'party/layout.html.twig' %}
{% block title %}Inspiraciones | Categor√≠as{% endblock %}
{% block main_title %}

    <div id="tittle_responsive" class="container">
        <div class="row">
            <div class="tittle_base">
                <img src="{{ asset('images/tittle_party_inspiraciones.png') }}" alt="Inspiraciones Tittle">
            </div>
        </div>
    </div>
{% endblock %}
{% block menuprincipal %}
    {% set menuItem = knp_menu_get('AppBundle:Builder:mainMenuParty', [], {'image_title': 'tittle_party_inspiraciones.png'}) %}
    {{ knp_menu_render(menuItem) }}
{% endblock menuprincipal %}

{% block content %}
    {{ parent() }}

    <div class="container">
        <div class="proveedores_party row">
            <div class="col-sm-6 col-md-4">
                <a href="{{ path('inspiraciones_tendencias', {'slug_site': 'party'}) }}">
                    <div class="thumbnail">
                        <img class="filtroimg" src="{{ asset('images/filtro_party.png') }}" alt="filter">
                        <img src="{{ asset('images/party_tendencias.jpg') }}" alt="Tendencias">
                        <div class="caption">
                            <h3>TENDENCIAS</h3>
                        </div>
                    </div>
                </a>
            </div>


            <div class="col-sm-6 col-md-4">
                <a href="{{ path('inspiraciones_videos', {'slug_site': 'party'}) }}">
                    <div class="thumbnail">
                        <img class="filtroimg" src="{{ asset('images/filtro_party.png') }}" alt="filter">
                        <img src="{{ asset('images/todo_video.jpg') }}" alt="Videos Inspiraciones">
                        <div class="caption">
                            <h3>VIDEOS</h3>
                        </div>
                    </div>
                </a>
            </div>



            <div class="col-sm-6 col-md-4">
                <a href="{{ path('inspiraciones_music', {'slug_site': 'party'}) }}">
                    <div class="thumbnail">
                        <img class="filtroimg" src="{{ asset('images/filtro_party.png') }}" alt="filter">
                        <img src="{{ asset('images/party_canciones.jpg') }}" alt="Canciones">
                        <div class="caption">
                            <h3>CANCIONES</h3>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-sm-6 col-md-4">
                <a href="{{ path('inspiraciones_fotos_proveedores', {'slug_site': 'party'}) }}">
                    <div class="thumbnail">
                        <img class="filtroimg" src="{{ asset('images/filtro_party.png') }}" alt="filter">
                        <img src="{{ asset('images/party_fotop.jpg') }}" alt="Fotos Proveedores">
                        <div class="caption">
                            <h3>FOTOS DE PROVEEDORES</h3>
                        </div>
                    </div>
                </a>
            </div>

        </div>
    </div>



{% endblock %}
