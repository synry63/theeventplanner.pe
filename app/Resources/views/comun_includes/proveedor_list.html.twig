<div class="col-sm-6 col-md-4">
    <a href="{{ path('proveedor_detail', {'slug_site': 'wedding','slug_proveedor': proveedor.slug}) }}">
        <div class="thumbnail">
            <div class="card">
                <div class="front">
                    {% if loop.first %}
                        <div class="liston">
                            <img src="{{ asset('images/liston_wedding.png')}}" alt="wedding premium">
                        </div>
                    {% endif %}
                    {% for f in proveedor.fotos  %}
                        {% if f.isListado %}
                            <div class="img-circle logo-circle">
                                <img id="logo-circle" src="{{ asset('images/proveedores/logo/'~proveedor.logo.logoName)}}" alt="{{ proveedor.nombre }}">
                            </div>
                            <img src="{{ asset('images/proveedores/fotos/'~f.img)|imagine_filter('thumb_proveedor')}}" alt="{{ f.proveedor.nombre}}">
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="back">
                    {% if loop.first %}
                        <div class="liston">
                            <img src="{{ asset('images/liston_wedding.png')}}" alt="wedding premium">
                        </div>
                    {% endif %}
                    <img width="60%" src="{{ asset('images/proveedores/logo/'~proveedor.logo.logoName)}}" alt="{{ proveedor.nombre }}">
                </div>
            </div>
            <div class="caption">
                <h3>{{ proveedor.nombre }}</h3>
            </div>
        </div>
    </a>
</div>
