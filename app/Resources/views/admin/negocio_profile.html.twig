    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <title>Preview</title>
</head>

<body>

{% for label, flash in app.session.flashbag.get('success') %}
    <div class="alert alert-success">
        {{ flash }}
    </div>
{% endfor %}
<ul class="aprobe-buttons">
    <li>
        <a class="btn btn-default" style="position: absolute;left: 5px; width: 140px; text-align: right;padding-right: 30px" href="{{ path('admin_negocio_preview_seccion',{'id':app.request.get('id'),'slug_site':seccion}) }}"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i> Atr√°s</a>
    </li>
</ul>
<div class="panel panel-default" style="padding-top: 60px;">
    <div class="panel-heading">
        <i class="fa fa-briefcase" aria-hidden="true"></i> Rubro de Actividad
    </div>
    <div class="panel-body">
        {{ form_start(form) }}
        {% if form.categoriasListado.vars.errors|length>0 %}
            <div class="alert alert-danger" role="alert">
                <div> <i class="fa fa-exclamation-circle" aria-hidden="true"></i> {{ form_errors(form.categoriasListado) }}</div>
            </div>
        {% endif %}
        <div class="form-group check-boxs">
            {% for name, choices in form.categoriasListado.vars.choices %}
                <div class="col-md-3 ">
                    <ul>
                        <li class="checkbox_category">
                            <input type="checkbox" class="checkallsub" /> {{ name }}
                        </li>

                        {% for key,choice in choices %}
                            <li class="indent">
                                {{ form_errors(form.categoriasListado[key]) }}
                                {{ form_widget(form.categoriasListado[key]) }}
                                {{ form_label(form.categoriasListado[key]) }}
                            </li>
                        {% endfor %}

                    </ul>
                </div>

            {% endfor %}
        </div>

        <div class="form-group">
            {{ form_widget(form.submit,{ 'attr': {'class': 'btn btn-entrar'},'label': 'Enviar'}) }}
        </div>

        {{ form_end(form) }}

    </div>

</div>

</body>