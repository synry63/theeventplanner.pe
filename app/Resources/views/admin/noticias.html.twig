

<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href='https://fonts.googleapis.com/css?family=Lato:400,300italic,100italic,700,700italic,400italic,300,100' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <title>Dashboard</title>
</head>

<body>

{{ include('admin/includes/menu.html.twig', { 'seccions': seccion }) }}



<div class="container ">

    <div class="links-tendencias">
        <ul>
            <li><a href="{{ path('admin_noticias_seccion', {'slug_site': 'wedding'}) }}">Noticias Weeding</a></li>
            <li><a href="{{ path('admin_noticias_seccion', {'slug_site': 'party'}) }}">Noticias Party</a></li>
            <li><a href="{{ path('admin_noticias_seccion', {'slug_site': 'kids'}) }}">Noticias Kids</a></li>
            <li><a href="{{ path('admin_noticias_seccion', {'slug_site': 'dinner'}) }}">Noticias Dinner</a></li>
        </ul>
    </div>

    {% for label, flash in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flash }}
        </div>
    {% endfor %}

    <div class="news-blog">
        {% for n in noticias  %}
            <div class="col-md-8 col-md-offset-2">
                <div class="row new">
                    <div class="col-md-5 col-xs-5 col-sm-5 foto-new">
                        <a class="admin_edit" href="{{ path('admin_noticia_edit', {'id': n.id}) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Editar</a>
                        <a href="javascript:void(0)">
                            <img width="100%" src="{{ vich_uploader_asset(n, 'imgFile') }}" alt="">
                        </a>
                    </div>
                    <div class="col-md-7 col-xs-7 col-sm-7">
                        <a class="titulo-noti-wedding" href="javascript:void(0)"><h1>{{ n.nombre }}</h1></a>
                        <span>{{ n.adedAt|date("d F, Y") }}</span>
                        <span><i class="fa fa-comments" aria-hidden="true"></i> Comentarios ({{ n.comentarios|length }})</span>
                        <p>{{ n.parafos[0].description }}</p>
                    </div>
                </div>
                <hr>
            </div>
        {% endfor %}
    </div>
</div>






<script type="text/javascript" src="{{ asset('js/jquery-1.11.0.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>


</body>

</html>








