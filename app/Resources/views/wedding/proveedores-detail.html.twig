                                        </div>
                                    {% endif %}



                                    <div class="rating-container" style="margin-top: 10px">
                                        <div id="rateYo2"></div>
                                        <div class="counter"></div>
                                    </div>

                                    <div class="form-group">
                                        {{ form_label(form.titulo,'Título') }}
