{% extends 'wedding/layout.html.twig' %}
{% block title %}Proveedores{% endblock %}
{% block main_title %}

    <div class="container">
        <div class="row">
            <div class="tittle_base">
                <img src="{{ asset('images/proveedores_tittle.png') }}" alt="Proveedores Tittle">
            </div>
        </div>
    </div>
{% endblock %}


{% block content %}
    {{ parent() }}
    <div class="container">
            <div class="btn-group categorias">
                <button class="btn btn-tittle dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    Categorias
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    {% for c in categorias %}
                        <li><a href="#">{{ c.nombre }}</a></li>
                    {% endfor %}
                </ul>
            </div>
    </div>

    <div class="container">
        <div class="proveedores row">

            {% for c in categorias %}
                <div class="col-sm-6 col-md-4">
                    <a href="{{ path('proveedores_category', {'slug_site': 'wedding','slug_category': c.slug}) }}">
                        <div class="thumbnail">
                            <img class="filtroimg" src="{{ asset('images/filtro_weddings.png') }}" alt="filter">
                            <img src="{{ asset('images/categorias/'~c.imgSmall)}}" alt="{{ c.nombre }}">
                            <div class="caption">
                                <h3>{{ c.nombre }}</h3>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}


