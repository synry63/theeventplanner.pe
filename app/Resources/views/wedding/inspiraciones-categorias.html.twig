{% extends 'wedding/layout.html.twig' %}
{% block title %}Inspiraciones | Categor√≠as{% endblock %}
{% block main_title %}

    <div id="tittle_responsive" class="container">
        <div class="row">
            <div class="tittle_base">
                <img src="{{ asset('images/tittle_inspiraciones.png') }}" alt="Inspiraciones Tittle">
            </div>
        </div>
    </div>
{% endblock %}
{% block menuprincipal %}
    {% set menuItem = knp_menu_get('AppBundle:Builder:mainMenuWedding', [], {'image_title': 'tittle_inspiraciones.png'}) %}
    {{ knp_menu_render(menuItem) }}
{% endblock menuprincipal %}

{% block content %}
    {{ parent() }}
    <div class="container breadcrumbs-{{ app.request.get('slug_site') }}">
        {{ wo_render_breadcrumbs() }}
    </div>


    <div class="container">
        <div class="proveedores row">
            <div class="col-sm-6 col-md-4">
                <a href="{{ path('inspiraciones_tendencias', {'slug_site': 'wedding'}) }}">
                    <div class="thumbnail">
                        <img class="filtroimg" src="{{ asset('images/filtro_weddings.png') }}" alt="filter">
                        <img src="{{ asset('images/tendencias.jpg') }}" alt="Tendencias">
                        <div class="caption">
                            <h3>TENDENCIAS</h3>
                        </div>
                    </div>
                </a>
            </div>


            <div class="col-sm-6 col-md-4">
                <a href="{{ path('inspiraciones_videos', {'slug_site': 'wedding'}) }}">
                    <div class="thumbnail">
                        <img class="filtroimg" src="{{ asset('images/filtro_weddings.png') }}" alt="filter">
                        <img src="{{ asset('images/Fotos_proveedores_list.jpg') }}" alt="Videos Inspiraciones">
                        <div class="caption">
                            <h3>VIDEOS</h3>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-sm-6 col-md-4">
                <a href="{{ path('inspiraciones_votos', {'slug_site': 'wedding'}) }}">
                    <div class="thumbnail">
                        <img class="filtroimg" src="{{ asset('images/filtro_weddings.png') }}" alt="filter">
                        <img src="{{ asset('images/votos.jpg') }}" alt="Votos">
                        <div class="caption">
                            <h3>VOTOS</h3>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-sm-6 col-md-4">
                <a href="{{ path('inspiraciones_music', {'slug_site': 'wedding'}) }}">
                    <div class="thumbnail">
                        <img class="filtroimg" src="{{ asset('images/filtro_weddings.png') }}" alt="filter">
                        <img src="{{ asset('images/musica_inspiraciones.jpg') }}" alt="Canciones">
                        <div class="caption">
                            <h3>CANCIONES</h3>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-sm-6 col-md-4">
                <a href="{{ path('inspiraciones_fotos_proveedores', {'slug_site': 'wedding'}) }}">
                    <div class="thumbnail">
                        <img class="filtroimg" src="{{ asset('images/filtro_weddings.png') }}" alt="filter">
                        <img src="{{ asset('images/foto_proveedores2.jpg') }}" alt="Fotos Proveedores">
                        <div class="caption">
                            <h3>FOTOS DE PROVEEDORES</h3>
                        </div>
                    </div>
                </a>
            </div>

        </div>
    </div>



{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/jquery.flexslider-min.js') }}"></script>

{% endblock %}