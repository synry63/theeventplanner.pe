{% extends 'wedding/layout.html.twig' %}
{% block title %}Blog {% endblock %}

{% block main_title %}
    <div id="tittle_responsive" class="container">
        <div class="row">
            <div class="tittle_base">
                <img src="{{ asset('images/tittle_blog.png') }}" alt="Blog Tittle">
            </div>
        </div>
    </div>
{% endblock %}

{% block menuprincipal %}
    {% set menuItem = knp_menu_get('AppBundle:Builder:mainMenuWedding', [], {'image_title': 'tittle_blog.png'}) %}
    {{ knp_menu_render(menuItem) }}
{% endblock menuprincipal %}

{% block content %}
    {{ parent() }}


    <div class="container breadcrumbs-{{ app.request.get('slug_site') }}">
        {{ wo_render_breadcrumbs() }}
    </div>
    <div class="container news-blog" >


        <div class="row">
            <div class="col-md-8 new-principal">

                <a href="{{ path('noticia_start',{'slug_site':app.request.get('slug_site'),'slug_noticia': noticias[0].noticia.slug}) }}">
                    <img width="100%" src="{{ vich_uploader_asset(noticias[0].noticia, 'imgFile') }}" alt="">
                </a>
                <div class="fecha">
                    <div class="dia">{{ noticias[0].noticia.adedAt|date("d") }}</div>
                    <div class="mes">{{ noticias[0].noticia.adedAt|date("M") }}</div>
                </div>


                <div class="left-noti">
                    <div class="detalle detalle-{{ app.request.get('slug_site') }}">{{ app.request.get('slug_site') }}</div>

                    <a href="{{ path('noticia_start',{'slug_site':app.request.get('slug_site'),'slug_noticia': noticias[0].noticia.slug}) }}"><h1 id="prin">{{ noticias[0].noticia.nombre }}</h1></a>

                    <div class="autor-prin">Por: {{ noticias[0].noticia.author.nombre }}</div>
                </div>



                <div class="tittle-principal">


                </div>

            </div>
            <div class="col-md-4 new-secundaria">

                <div class="noti-small n-top">
                    <a  href="{{ path('noticia_start',{'slug_site':app.request.get('slug_site'),'slug_noticia': noticias[1].noticia.slug}) }}">
                        <img width="auto" height="100%" src="{{ vich_uploader_asset(noticias[1].noticia, 'imgFile') }}" alt="">
                    </a>
                    <div class="left-noti2">
                        <div class="detalle detalle-{{ app.request.get('slug_site') }}">{{ app.request.get('slug_site') }}</div>

                        <a href="{{ path('noticia_start',{'slug_site':app.request.get('slug_site'),'slug_noticia': noticias[1].noticia.slug}) }}"><h1 class="prin">{{ noticias[1].noticia.nombre }}</h1></a>

                        <div class="autor-prin">Por: {{ noticias[1].noticia.author.nombre }} - {{ noticias[2].noticia.adedAt|date("m/d/Y")| localizeddate('long', 'none', app.request.locale ) }}</div>
                    </div>

                    <div class="tittle-principal2">


                    </div>
                </div>

                <div class="noti-small n-bottom" >
                    <a href="{{ path('noticia_start',{'slug_site':app.request.get('slug_site'),'slug_noticia': noticias[2].noticia.slug}) }}">
                        <img width="auto" height="100%" src="{{ vich_uploader_asset(noticias[2].noticia, 'imgFile') }}" alt="">
                    </a>
                    <div class="left-noti2">
                        <div class="detalle detalle-{{ app.request.get('slug_site') }}">{{ app.request.get('slug_site') }}</div>

                        <a href="{{ path('noticia_start',{'slug_site':app.request.get('slug_site'),'slug_noticia': noticias[2].noticia.slug}) }}"><h1 class="prin">{{ noticias[2].noticia.nombre }}</h1></a>

                        <div class="autor-prin">Por: {{ noticias[2].noticia.author.nombre }} - {{ noticias[2].noticia.adedAt|date("m/d/Y")| localizeddate('long', 'none', app.request.locale ) }}</div>
                    </div>
                    <div class="tittle-principal2">


                    </div>
                </div>



            </div>
        </div>





        <div class="row">
        {% for n in noticias[3:] %}



            <div class="col-md-8" style="margin-top: 30px">
                <div class="row new">
                    <div class="col-md-5 col-xs-5 col-sm-5 foto-new">
                        <a href="{{ path('noticia_start',{'slug_site':app.request.get('slug_site'),'slug_noticia': n.noticia.slug}) }}">
                            <img src="{{ vich_uploader_asset(n.noticia, 'imgFile') }}" alt="">
                        </a>
                    </div>
                    <div class="col-md-7 col-xs-7 col-sm-7">
                        <a class="titulo-noti-{{ app.request.get('slug_site') }}" href="{{ path('noticia_start',{'slug_site':app.request.get('slug_site'),'slug_noticia': n.noticia.slug}) }}"><h1>{{ n.noticia.nombre }}</h1></a>
                        <span style="text-transform: capitalize">{{ n.noticia.adedAt|date("m/d/Y")| localizeddate('long', 'none', app.request.locale ) }}</span>
                        <span><i class="fa fa-comments" aria-hidden="true"></i> Comentarios ({{ n.noticia.comentarios|length }})</span>

                        <p>{{ n.noticia.parafos[0].description }}</p>
                        <div class="boton-share-noti2">
                            <a href="javascript:void(0);" data-href="{{ app.request.getUriForPath(path('noticia_start',{'slug_site':app.request.get('slug_site'),'slug_noticia': n.noticia.slug})) }}" class="shareBtnFacebook">
                                <span class="fa-stack fa-lg">
                                  <i class="fa fa-circle fa-stack-2x"></i>
                                  <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                            <a href="{{ 'https://twitter.com/share?text=' ~ n.noticia.nombre ~' : '~n.noticia.parafos[0].description }}" target="_blank" data-show-count="false">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                             <span  style="display: inline-block;"><div class="fb-like"
                                        data-href="{{ app.request.getUriForPath(path('noticia_start',{'slug_site':app.request.get('slug_site'),'slug_noticia': n.noticia.slug})) }}"
                                        data-layout="button_count"
                                        data-action="like"
                                        data-show-faces="false">
                                 </div></span>

                        </div>
                    </div>
                </div>
                <hr>
            </div>
        {% endfor %}
        </div>
    </div>




{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
    <script>
        $( ".shareBtnFacebook" ).click(function() {
            FB.ui({
                method: 'share',
                mobile_iframe: true,
                href: $(this).attr('data-href')
            }, function(response){});
        });
    </script>
{% endblock %}
