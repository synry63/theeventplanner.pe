    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('js/DiagonalSlider.js') }}"></script>

    <script>
        $(document).ready(function() {
            $.fn.preload = function() {
                this.each(function(){
                    $('<img/>')[0].src = this;
                    ctp_load++;
                    if(ctp_load>3) {
                        $('.gallery_content').createDiagonalSlider();
                    }
                });
            }
            var arr_out = [];
            var ctp_load = 0;
            $( ".gallery_content .gallery_item img" ).each(function( index ) {
                arr_out.push($( this ).attr('src'));
            });

            // Usage:
            $(arr_out).preload();
        });
    </script>
{% endblock %}
