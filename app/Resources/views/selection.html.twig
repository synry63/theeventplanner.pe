        <div class="gallery_content_resp">
            <div class="sello_top_resp">
                <img src="{{ asset('images/tittle_seleccion_page.png') }}" alt="The event Planner">
            </div>

            <a class="test" href="{{ path('site_start', {'slug_site': 'wedding'}) }}">
