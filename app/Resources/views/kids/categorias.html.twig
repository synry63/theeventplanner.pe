{% extends 'kids/layout.html.twig' %}
{% block title %}Proveedores{% endblock %}

{% block main_title %}
    <div id="tittle_responsive" class="container">
        <div class="row">
            <div class="tittle_base">
                <img src="{{ asset('images/proveedores_kids_tittle.png') }}" alt="Proveedores Tittle">
            </div>
        </div>
    </div>
{% endblock %}

{% block menuprincipal %}
    {% set menuItem = knp_menu_get('AppBundle:Builder:mainMenuKids', [], {'image_title': 'proveedores_kids_tittle.png'}) %}
    {{ knp_menu_render(menuItem) }}
{% endblock menuprincipal %}




{% block content %}
    {{ parent() }}
    <div class="container breadcrumbs-{{ app.request.get('slug_site') }}">
        {{ wo_render_breadcrumbs() }}
    </div>

    <div class="container">
        <div class="col-md-4 col-md-offset-4">
            <div class="btn-group categorias_kids">
                <button class="btn btn-tittle_kids categorias2 dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    Categor√≠as de Proveedores
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu dropdown-categorias-{{ app.request.get('slug_site') }}">
                    {% for c in categorias_menu %}
                        <li><a href="{{ path('proveedores_category', {'slug_site': 'kids','slug_category': c.slug}) }}">{{ c.nombre }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="proveedores_kids row">

            {% for c in categorias %}
                <div class="col-sm-6 col-md-4">
                    <a href="{{ path('proveedores_category', {'slug_site': 'kids','slug_category': c.slug}) }}">
                        <div class="thumbnail">
                            <img class="filtroimg" src="{{ asset('images/filtro_kids.png') }}" alt="filter">
                            <img src="{{ asset('images/categorias/'~c.imgSmall)}}" alt="{{ c.nombre }}">
                            <div class="caption">
                                <h3>{{ c.nombre }}</h3>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}


