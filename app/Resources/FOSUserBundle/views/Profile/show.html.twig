{% extends "FOSUserBundle::layout.html.twig" %}

{% block content %}
    {% block main_title %}

        <div class="container">

            <div class="row">
                <div class="tittle_general">
                    <img src="{{ asset('images/tittle_miperfil.png') }}" alt="Proveedores Tittle">
                </div>
            </div>

        </div>
    {% endblock %}

    {{ parent() }}
    <div class="container-fluid portada-profile">
        <div class="container profile-detail">
            <div class="col-sm-4 col-xs-12">
                <img src="{{ asset('images/user_icon.png') }}" alt="User_foto">
                <p>{{ user.nombres }} {{ user.apellidos }}</p>
                <div class="user_show">
                    <p><span>Nombre de Usuario:</span> {{ user.username }}</p>
                    <p><span>Email:</span> {{ user.email }}</p>
                    <p><span>DNI:</span> {{ user.dni }}</p>
                </div>
            </div>

        </div>
    </div>


    <div class="container">
        <div class="menu_profile">
            {{ knp_menu_render('AppBundle:Builder:menuProfile',{ 'template': 'knp_menu.html.twig'}) }}
        </div>
    </div>

    {% include "FOSUserBundle:Profile:show_content.html.twig" %}



{% endblock content %}
